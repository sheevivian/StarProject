@using StarProject.ViewModels
@model LostInfoVM

@{
    ViewData["Title"] = "遺失物編輯";
}

<head>
    <style>
        .img500px img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* cover = 等比縮放填滿框架，多的裁掉 */
            display: none;
        }

        .img500px {
            width: 500px; /* 固定寬度 */
            height: 500px; /* 固定高度 */
            overflow: hidden; /* 超出的部分裁掉 */
            display: flex;
            justify-content: center;
            align-items: center;
            border: 1px solid #ddd; /* 可選，看框線 */
        }

        .btn-edit {
            --bs-btn-color: #fff;
            --bs-btn-bg: #0d6efd;
            --bs-btn-border-color: #0d6efd;
            --bs-btn-hover-color: #fff;
            --bs-btn-hover-bg: #527bcc;
            --bs-btn-hover-border-color: #0d6efd;
            --bs-btn-focus-shadow-rgb: 217, 164, 6;
            --bs-btn-active-color: #fff;
            --bs-btn-active-bg:#527bcc;
            --bs-btn-active-border-color: #0d6efd;
            --bs-btn-active-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
        }

        .btn-outline-back {
            --bs-btn-color: #DC3545;
            --bs-btn-border-color: #DC3545;
            --bs-btn-hover-color: #DC3545;
            --bs-btn-hover-bg: #f8e6e9;
            --bs-btn-hover-border-color: #DC3545;
            --bs-btn-focus-shadow-rgb: 255, 193, 7;
            --bs-btn-active-color: #DC3545;
            --bs-btn-active-border-color: #DC3545;
            --bs-btn-active-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
            --bs-gradient: none;
        }
        
        .text-distance {
            letter-spacing: 5px; /* 正值：字母間距變大，負值：變小 */
            text-align: center; /* 文字置中 */
        }
    </style>
</head>

<h1 class="fw-bold">遺失物編輯</h1>
<hr />
<div class="row">
    <div class="d-flex">
        <form asp-action="Edit" class="col-md-5" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="No" />
            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label fw-bold fs-5"></label><span asp-validation-for="Name" class="text-danger ms-3"></span>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Category" class="control-label fw-bold fs-5"></label><span asp-validation-for="Category" class="text-danger ms-3"></span>
                <select asp-for="Category" class="form-select">
                    <option value="一般物品">一般物品</option>
                    <option value="電子產品">電子產品</option>
                    <option value="證件">證件</option>
                    <option value="金融票證">金融票證</option>
                    <option value="其他">其他</option>
                </select>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Desc" class="control-label fw-bold fs-5"></label><span asp-validation-for="Desc" class="text-danger ms-3"></span>
                <textarea asp-for="Desc" class="form-control" rows="10" placeholder="輸入物品描述..." style="resize: none;"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label fw-bold fs-5"></label><span asp-validation-for="ImageFile" class="text-danger ms-3"></span>
                <input asp-for="ImageFile" class="form-control" type="file" onchange="previewImage(event)" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="FoundDate" class="control-label fs-5 fw-bold"></label><span asp-validation-for="FoundDate" class="text-danger ms-3"></span>
                <input asp-for="FoundDate" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Status" class="control-label fw-bold fs-5"></label><span asp-validation-for="Status" class="text-danger ms-3"></span>
                <select asp-for="Status" class="form-select" id="status">
                    <option value="待領取">待領取</option>
                    <option value="已領取">已領取</option>
                </select>
            </div>
            <div id="ownerInfo" style="display:none;">
                <div class="form-group mb-2">
                    <label asp-for="OwnerName" class="control-label fw-bold fs-5"></label><span asp-validation-for="OwnerName" class="text-danger ms-3"></span>
                    <input asp-for="OwnerName" class="form-control" id="OwnerName" />
                </div>

                <div class="form-group mb-2">
                    <label asp-for="OwnerPhone" class="control-label fw-bold fs-5"></label><span asp-validation-for="OwnerPhone" class="text-danger ms-3"></span>
                    <input asp-for="OwnerPhone" class="form-control" id="OwnerPhone" />
                </div>
            </div>
            <div class="form-group d-flex gap-2 mt-2 text-distance">
                <button type="submit" value="Save" class="btn btn-edit flex-fill fw-bold fs-5 text-distance">
                    <i class="fa-solid fa-pen-nib"></i>修改
                </button>
                <a asp-action="Index" class="btn btn-outline-back flex-fill fw-bold fs-5">返回列表</a>
            </div>
        </form>
        <div class="flex-fill d-flex justify-content-center">
                <div class="img500px mb-3">
                    <img id="originalImg" src="@Model.Image" alt="物品照片" style="display:block;" />
                    <img id="preview" src="#" alt="圖片預覽" style="display:none" />
                </div>
        </div>
        
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                const originalImg = document.getElementById('originalImg');
                const preview = document.getElementById('preview');
                // 隱藏原圖
                originalImg.style.display = 'none';

                preview.src = URL.createObjectURL(file); // 建立臨時 URL
                preview.style.display = 'block';         // 顯示圖片
            }
        }

        document.addEventListener("DOMContentLoaded", function () {
            let statusSelect = document.getElementById("status");
            let ownerInfo = document.getElementById("ownerInfo");

            // 取得 OwnerName / OwnerPhone 輸入欄位
            let ownerNameInput = document.getElementById("OwnerName");
            let ownerPhoneInput = document.getElementById("OwnerPhone");


            function toggleOwnerInfo() {
                if (statusSelect.value === "已領取") {
                    ownerInfo.style.display = "block";
                } else {
                    ownerInfo.style.display = "none";
                    // 清空欄位，送回資料庫就是 null
                    ownerNameInput.value = "";
                    ownerPhoneInput.value = "";
                }
            }

            // 頁面載入時執行一次
            toggleOwnerInfo();

            // 下拉選單改變時執行
            statusSelect.addEventListener("change", toggleOwnerInfo);
        });
    </script>
}
