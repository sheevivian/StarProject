@using StarProject.ViewModels
@model IEnumerable<TicketNameViewModel>
@Html.AntiForgeryToken()

@{
    ViewData["Title"] = "票券列表";
}

<head>
    <style>
        /* 圖片區塊固定高度 */
        .card-img-container {
            width: 100%;
            height: 250px; /* 可依需求調整 */
            overflow: hidden;
        }

        .card-img-container img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* 填滿裁切 */
        }

        /* 限制文字顯示兩行，多的用 ... */
        .text-truncate-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2; /* 顯示 2 行 */
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .fs12px {
            font-size: 12px;
        }

        .big-checkbox {
            transform: scale(1.5); /* 放大 1.5 倍 */
            cursor: pointer;
        }

        /* 1️⃣ 圖片容器必須隱藏溢出，避免放大影響卡片大小 */
        .card-img-container {
            overflow: hidden;
            position: relative;
        }

        /* 2️⃣ 圖片平滑過渡 */
        .card-img-container img {
            transition: transform 0.3s ease; /* 動畫平滑 */
        }

        /* 3️⃣ 滑鼠移入放大 */
        .cardDetail:hover img {
            transform: scale(1.15); /* 放大 15% */
            filter: brightness(1.1); /* 略亮 */
            box-shadow: 0 8px 20px rgba(0,0,0,0.3); /* 陰影 */
        }

        /* checkbox 層級最高，永遠在最上面 */
        .cardDetail .checkbox {
            z-index: 10;
        }

        .btn-price-edit:hover {
            color: #000000;
        }

        .btn-price-edit:hover {
            color: #4d4d4d;
        }
    </style>
    <link href="~/css/lostinfoindex.min.css" rel="stylesheet" />
</head>

<main class="flex-fill position-relative">
    <!-- 標題+新增 -->
    <div class="d-flex align-items-center mb-3">
        <h1 class="fw-bold flex-grow-1 mb-0">票券列表</h1>
        <a asp-action="Create" class="btn btn-search fw-bold"><i class="fa-solid fa-plus"></i> 新增</a>
    </div>

    <!-- CSRF Token -->
    <form id="deleteForm">
        @Html.AntiForgeryToken() <!-- 生成 CSRF 隱藏欄位 -->
    </form>

    <!-- 搜尋框+每頁筆數 -->
    <div class="input-group input-group-lg">
        <input id="searchInput" type="text" class="form-control" aria-label="Sizing example input">
        <button type="button" class="input-group-text search" id="btnSearch" data-bs-toggle="tooltip" data-bs-placement="bottom"
                data-bs-title="搜尋" data-bs-trigger="hover">
            <i class="fa-solid fa-magnifying-glass"></i>
        </button>

        <div class="d-flex gap-3">
            <!-- 進階篩選 -->
            <div class="dropdown">
                <button class="input-group-text search dropdown-toggle dropdown-toggle-split no-btn-style position-relative" type="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside" id="advancedFilter">
                    <i class="fa-solid fa-chevron-down" data-bs-toggle="tooltip" data-bs-placement="bottom"
                       data-bs-title="進階篩選" data-bs-trigger="hover"></i>

                    <!-- Counter - Alerts -->
                    <span class="filterCount position-absolute top-0 start-100 translate-middle" id="filterCount">9</span>
                </button>

                <ul class="dropdown-menu p-2" style="width:180px">
                    <!-- 票券種類 -->
                    <li>
                        <button type="button" class="dropdown-item fw-bold ps-2" data-bs-toggle="collapse" data-bs-target="#collapseCategory" aria-expanded="false" aria-controls="collapseCategory">
                            - 票券種類
                        </button>
                    </li>
                    <!-- 票券種類內容 -->
                    <li>
                        <div class="collapse mb-2 ps-3 fs14px" id="collapseCategory">
                            <div class="p-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="常設展覽" id="cat1">
                                    <label class="form-check-label" for="cat1">
                                        常設展覽
                                     </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="特別展覽" id="cat2">
                                    <label class="form-check-label" for="cat2">
                                        特別展覽
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="星空劇院" id="cat3">
                                    <label class="form-check-label" for="cat3">
                                        星空劇院
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="立體劇場" id="cat4">
                                    <label class="form-check-label" for="cat4">
                                        立體劇場
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="星際探險" id="cat5">
                                    <label class="form-check-label" for="cat5">
                                        星際探險
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="優惠套票" id="cat6">
                                    <label class="form-check-label" for="cat6">
                                        優惠套票
                                    </label>
                                </div>
                            </div>
                        </div>
                    </li>

                    <!-- 票券狀態 -->
                    <li>
                        <button type="button" class="dropdown-item fw-bold ps-2" data-bs-toggle="collapse" data-bs-target="#collapseStatus" aria-expanded="false" aria-controls="collapseCategory">
                            - 票券狀態
                        </button>
                    </li>
                    <!-- 票券狀態內容 -->
                    <li>
                        <div class="collapse mb-2 ps-3 fs14px" id="collapseStatus">
                            <div class="p-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="使用" id="status1">
                                    <label class="form-check-label" for="status1">
                                        使用中
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="停用" id="status2">
                                    <label class="form-check-label" for="status2">
                                        已停用
                                    </label>
                                </div>
                            </div>
                        </div>
                    </li>

                    <li><hr class="dropdown-divider"></li>

                    <!-- 完成+清除 -->
                    <li class="d-flex gap-1">
                        <button type="button" class="br20px fw-bold btn flex-fill btn-search" id="filterFinsh">
                            完成
                        </button>
                        <button type="button" class="br20px fw-bold btn flex-fill btn-outline-search">
                            清除
                        </button>
                    </li>
                </ul>
            </div>

            <!-- 每頁顯示資料筆數 -->
            <div style="width: 150px">
                <select class="form-select form-select-lg" aria-label="Large select example" id="pageSizeSelect">
                    <option selected value="10">每頁10筆</option>
                    <option value="15">每頁15筆</option>
                    <option value="20">每頁20筆</option>
                    <option value="25">每頁25筆</option>
                </select>
            </div>
        </div>
    </div>

    <div class="mt-1 ms-2" style="display:none" id="selectedFiltersDiv">
        <span id="selectedFiltersText" class="text-secondary"></span>
    </div>



    <div class="bg-white p-5 rounded rounded-4 my-3 border border-1">
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-3" id="ticketrow">
            @await Html.PartialAsync("_TicketRows", Model)
        </div>
    </div>

    <!-- 分頁 -->
    <div id="pagination">
        @await Html.PartialAsync("_TicketPagination", Model)
    </div>

    <!-- 詳細內容 -->
    <div class="modal fade" id="modalDetail" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
            <div class="modal-content pb-3">
                <div class="modal-header">
                    <h4 id="hdBage"></h4>
                    <h4 class="modal-title fw-bold" id="modalTitle"></h4>
                    <span id="hdSpan" class="ms-2 fw-light fs-6 text-muted"></span>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body d-flex row" id="modalCon">
                    <!-- 圖片 -->
                    <div class="col-4" style="width: 300px; height: 300px;">
                        <img id="modalImage" src="" class="card-img-top rounded" alt="票券照片" style="width:100%; height: 100%; object-fit: cover;">
                    </div>
                    <div class="col-6">
                        <h5 class="fs-5 d-flex">
                            <i class="fa-solid fa-star" style="color: #FFD43B;"></i>各票種類型價格
                        </h5>
                        
                        <table class="border border-2 border-black">
                            <tbody style="text-align:center;">
                                <tr id="typeRows" class="border border-2 border-black p-1"></tr>
                                <tr id="priceRows" class="border border-2 border-black p-1"></tr>
                            </tbody>
                        </table>

                        <h5 class="fs-5 mt-4">
                            <i class="fa-solid fa-star" style="color: #FFD43B;"></i>
                                7天庫存
                            <span class="fs-6">
                                (@(ViewData["startDate"])~@(ViewData["endDate"]))
                            </span>
                        </h5>
                        <table class="border border-2 border-black">
                            <thead style="text-align:center;">
                                <tr id="typeSHeader" class="border border-2 border-black bg-black text-white p-1" style="font-weight: normal;">
                                    <th class="" style="width: 80px; vertical-align:middle; border:0px"></th>
                                </tr>
                            </thead>
                            <tbody id="stockBody" class="border border-2 border-black p-1" style="text-align:center;">
                                <!-- 生成 -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
        let pageNumber = parseInt($('#pageSizeSelect').val()) || 10; // 預設每頁數量

        $(function () {
            var baseAddress = "https://localhost:7111";

            // 點搜尋按鈕
            $('#btnSearch').on("click", () => {
                console.log($('#searchInput').val());
                refreshTicketTable(1);
                updateSelectedFilters()
            });

            // 也可以輸入框 keyup 即時觸發
            $('#searchInput').on("keyup", () => {
                console.log($('#searchInput').val());
                refreshTicketTable(1);
                updateSelectedFilters()
            });

            // 進階篩選>完成
            $('#filterFinsh').click(function () {
                updateFilterCount();
                updateSelectedFilters()
                //讀取目前進階條件
                let categories = [...document.querySelectorAll("#collapseCategory input:checked")].map(cb => cb.value);
                let statuses = [...document.querySelectorAll("#collapseStatus input:checked")].map(cb => cb.value);

                let filters = { categories, statuses };

                refreshTicketTable(1);

                // 找到最接近的 dropdown-toggle
                var toggleBtn = $(this).closest('.dropdown').find('.dropdown-toggle')[0];

                // 取得 bootstrap dropdown instance
                var dropdown = bootstrap.Dropdown.getInstance(toggleBtn);

                // 沒有的話就新建
                if (!dropdown) dropdown = new bootstrap.Dropdown(toggleBtn);

                // 呼叫官方的 hide 方法來關閉
                dropdown.hide();
            });

            // 搜尋框+進階篩選>清除
            document.querySelector(".btn-outline-search").addEventListener("click", function () {
                document.querySelectorAll("input[type=checkbox]").forEach(cb => cb.checked = false);
                document.getElementById("searchInput").value = "";
                updateSelectedFilters();
                updateFilterCount()
                refreshTicketTable(1);
            });

            // 格式化日期字串 yyyy-MM-dd
            function formatDate(dateStr) {
                const date = new Date(dateStr); // log.releaseDate 是 "2025-09-17T00:00:00" 這種 ISO 字串
                const y = date.getFullYear();
                const m = ('0' + (date.getMonth() + 1)).slice(-2);
                const d = ('0' + date.getDate()).slice(-2);
                return `${m}/${d}`;
            }

            // 詳細資料
            $(document).on('click', '.btn-detail', function () {
                var btn = $(this);
                // 🔑 取得這筆資料的 ID
                var id = btn.data('id');
                var desc =btn.data('desc')

                $('#hdSpan').empty();
                if (btn.data('category') === "優惠套票")
                    {
                        $('#hdSpan').append(`
                            ${desc}
                        `);
                    }



                // ✅ 先清空所有 badge
                $('#hdBage').empty();

                if (btn.data('category') === "常設展覽")
                    {
                        $('#hdBage').prepend(`
                            <span class="badge rounded-pill text-bg-primary me-2" style="font-size:15px; width:80px;">
                                常設展覽
                            </span>
                         `);
                    }
                if (btn.data('category') === "特別展覽")
                    {
                        $('#hdBage').prepend(`
                            <span class="badge rounded-pill text-bg-success me-2" style="font-size:15px; width:80px;">
                                特別展覽
                            </span>
                         `);
                    }
                else if (btn.data('category') === "星空劇院")
                    {
                        $('#hdBage').prepend(`
                            <span class="badge rounded-pill bg-warning text-white me-2" style="font-size:15px; width:80px;">
                                星空劇院
                            </span>
                         `);
                    }
                else if (btn.data('category') === "優惠套票")
                    {
                        $('#hdBage').prepend(`
                            <span class="badge rounded-pill text-bg-danger me-2" style="font-size:15px; width:80px;">
                                優惠套票
                            </span>
                         `);
                    }
                else if (btn.data('category') === "立體劇場")
                    {
                        $('#hdBage').prepend(`
                            <span class="badge rounded-pill text-bg-secondary me-2" style="font-size:15px; width:80px;">
                                立體劇場
                            </span>
                         `);
                    }
                else if (btn.data('category') === "星際探險")
                    {
                        $('#hdBage').prepend(`
                            <span class="badge rounded-pill text-bg-dark me-2" style="font-size:15px; width:80px;">
                                星際探險
                            </span>
                         `);
                    }


                // 標題
                $('#modalTitle').text(btn.data('id'));

                // 圖片
                $('#modalImage').attr('src', btn.data('image'));
                console.log('ID:', btn.data('id'), 'IMAGE:', btn.data('image'));
                // 清空之前的紀錄
                $('#typeRows').empty();
                $('#priceRows').empty();

                $.ajax({
                    url: '/Ticket/GetLogs', // Controller 的路徑
                    type: 'GET',
                    data: { id : id },
                    success: function (logs) {
                            logs.forEach(log => {
                                // 判斷 desc 是否有值
                                let descAttr = '';
                                if (log.desc && log.desc.trim() !== '') {
                                    descAttr = `data-bs-toggle="tooltip" data-bs-offset="0,0" title="${log.desc}"`;
                                }
                                $('#typeRows').append(`
                                <td class="border border-2 border-black bg-black text-white p-1 ${descAttr}" style="width:100px; vertical-align:middle; border:0px;">${log.ticType}</td>
                                `);
                                $('#priceRows').append(`
                                <td class="border border-2 border-black p-1 fs-5">$${log.ticPrice}
                                <a id="modelEditBtn" data-id="${log.ticNo}" class="btn btn-price-edit fs-6 border-0 p-0 ms-auto">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a></td>
                                `);
                                var btnEdit = $('#modelEditBtn');
                                var editId = btnEdit.data('id');
                                // 編輯按鈕連結
                                $('#modelEditBtn').attr("href", "/Ticket/Edit/" + editId );
                            });
                            // 🔹這裡重新初始化 tooltip
                            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                            tooltipTriggerList.map(function (tooltipTriggerEl) {
                                return new bootstrap.Tooltip(tooltipTriggerEl);
                            });
                    },
                    error: function () {
                        alert('讀取紀錄失敗');
                    }
                });


                $.ajax({
                url: '/Ticket/GetStockLogs', // Controller 的路徑
                    type: 'GET',
                    data: { id: id },
                    success: function (logs) {
                        let dates = [...new Set(logs.map(l => l.releaseDate))].sort();
                        let types = [...new Set(logs.map(l => l.type))];

                        $('#typeSHeader').empty().append('<th class="p-1" style="width:80px; vertical-align: middle; font-weight: normal;"></th>'); // 第一格空格
                        types.forEach(type => {
                            $('#typeSHeader').append(`<th class="p-1" style="width:80px; vertical-align: middle; font-weight: normal;">${type}</th>`);
                        });

                        $('#stockBody').empty();
                        dates.forEach(date => {
                            let row = `<tr><th class="p-1 border border-2 border-black fs-5">${formatDate(date)}</th>`; // 第一欄票種名稱
                            types.forEach(type => {
                                // 找出對應庫存
                                let log = logs.find(l => l.type === type && l.releaseDate === date);
                                let stock = log ? log.totalStock : 0;
                                row += `<td class="fs-5 p-1 border border-2 border-black">${stock}</td>`;
                            });
                            row += `</tr>`;
                            $('#stockBody').append(row);
                        });
                    },
                    error: function () {
                        alert('讀取紀錄失敗');
                    }
                });

            });


            // 【功能】更新篩選的顯示文字
            function updateSelectedFilters() {
                let selected = [];

                // 票券分類
                let categories = $("#collapseCategory input:checked").map(function () { return $(this).next("label").text(); }).get();
                if (categories.length) selected.push("<strong>分類：</strong>" + categories.join(", "));

                // 票券狀態
                let statuses = $("#collapseStatus input:checked").map(function () { return $(this).next("label").text(); }).get();
                if (statuses.length) selected.push("<strong>狀態：</strong>" + statuses.join(", "));

                // 顯示或隱藏 div
                if (selected.length) {
                    $("#selectedFiltersDiv").show();
                    $("#selectedFiltersText").html(selected.join("&nbsp;&nbsp;&nbsp;&nbsp;"));
                } else {
                    $("#selectedFiltersDiv").hide();
                    $("#selectedFiltersText").html("");
                }
            }

            // 【功能】更新篩選的數量
            function updateFilterCount() {
                let count = 0;

                // 票券分類
                if ($("#collapseCategory input:checked").length > 0) count++;

                // 票券狀態
                if ($("#collapseStatus input:checked").length > 0) count++;

                // 更新右上角 tooltip
                if (count > 0) {
                    $("#filterCount").show();
                    $("#filterCount").text(`${count}`);
                } else {
                    $("#filterCount").hide();
                }
            }

            // 分頁按鈕
            $(".pagination").on("click", ".pagination .page-link", function (e) {
                e.preventDefault();
                let page = $(this).data("page");
                refreshTicketTable(page);
            });


            // 每頁筆數
            $('#pageSizeSelect').on('change', function () {
                pageNumber = parseInt($(this).val()); // 更新 pageNumber
                // console.log("pageNumber 更新為:", pageNumber);

                refreshTicketTable(1);
            });
        });

        // 統一刷新列表
        async function refreshTicketTable(page = 1, filters = {}) {
            try {

                filters.Page = page;
                filters.PageSize = pageNumber;
                filters.keyword = $('#searchInput').val();
                filters.Categories = [...document.querySelectorAll("#collapseCategory input:checked")].map(cb => cb.value);
                filters.Statuses = [...document.querySelectorAll("#collapseStatus input:checked")].map(cb => cb.value);

                // 取得 CSRF Token
                filters.__RequestVerificationToken = $('input[name="__RequestVerificationToken"]').val();

                let response = await $.ajax({
                    url: '/Ticket/SearchSelect',
                    type: 'POST',
                    data: JSON.stringify(filters),
                    contentType: "application/json"
                });

                // 如果本頁沒有資料且頁數大於 1，自動回前一頁
                if (response.tableHtml.trim() === "" && page > 1) {
                    return await refreshTicketTable(page - 1, filters);
                }

                // 更新 tableBody
                $("#ticketrow").html(response.tableHtml);

                // 更新 pagination
                $("#pagination").html(response.paginationHtml);

                // 更新分頁顯示
                $('#paginationInfo').text(page);

                $('#selectNum').hide();

            }
            catch (err) {
                alert("更新列表失敗：" + err.responseText || err.statusText);
            }
        }
</script>

