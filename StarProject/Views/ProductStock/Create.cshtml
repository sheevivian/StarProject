@model StarProject.Models.ProductStock

@{
    ViewData["Title"] = "商品庫存設定";
}

<head>
    <style>
        * {
            padding: 0;
            margin: 0;
        }

        .btn-topbar {
            --bs-btn-bg: rgb(250, 208, 72);
            --bs-btn-border-color: rgb(250, 208, 72);
            --bs-btn-hover-bg: rgba(250, 208, 72, 0.692);
            --bs-btn-hover-border-color: rgba(250, 208, 72, 0.692);
            --bs-btn-focus-shadow-rgb: 217, 164, 6;
            --bs-btn-active-bg: #ffcd39;
            --bs-btn-active-border-color: #ffc720;
            --bs-btn-active-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
        }

        .btn-outline-back {
            --bs-btn-color: #DC3545;
            --bs-btn-border-color: #DC3545;
            --bs-btn-hover-color: #DC3545;
            --bs-btn-hover-bg: #f8e6e9;
            --bs-btn-hover-border-color: #DC3545;
            --bs-btn-focus-shadow-rgb: 255, 193, 7;
            --bs-btn-active-color: #DC3545;
            --bs-btn-active-border-color: #DC3545;
            --bs-btn-active-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
            --bs-gradient: none;
        }

        .btn-outline-excel {
            --bs-btn-color: rgb(0, 0, 0);
            --bs-btn-border-color: rgb(0, 0, 0);
            --bs-btn-hover-color: rgb(0, 0, 0);
            --bs-btn-hover-bg: rgba(250, 208, 72, 0.692);
            --bs-btn-hover-border-color: rgb(0, 0, 0);
            --bs-btn-focus-shadow-rgb: 255, 193, 7;
            --bs-btn-active-color: rgb(0, 0, 0);
            --bs-btn-active-border-color: rgb(0, 0, 0);
            --bs-btn-active-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
            --bs-gradient: none;
        }
    </style>
</head>
<div class="position-relative">
    <h1 class="fw-bold">商品庫存設定</h1>
    <div class="p-4 mt-3 rounded-4 bg-white">
                <div class="row">
                    <div class="col-6 my-5 ms-5">
                        <form asp-action="Create" method="post" enctype="multipart/form-data">
                            <div class="form-group d-flex align-items-center mb-3 row">
                                <div class="col-4 col-lg-2 fw-bold fs-5">
                                    <label asp-for="ProductNo" class="control-label"></label>
                                </div>
                                <div class="col-8 col-lg-10">
                                    <input asp-for="ProductNo" id="inputNo" class="form-control" />
                                    <span asp-validation-for="ProductNo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group d-flex align-items-center mb-3 row">
                                <div class="col-4 col-lg-2 fw-bold fs-5">
                                    <label asp-for="ProductNoNavigation.Name" class="control-label"></label>
                                </div>
                                <div class="col-8 col-lg-10">
                                    <input id="ProductName" class="form-control-plaintext" readonly />
                                </div>
                            </div>
                            <div class="form-group d-flex align-items-center mb-3 row">
                                <div class="col-4 col-lg-2 fw-bold fs-5">
                                    <label asp-for="Type" class=" control-label"></label>
                                </div>
                                <div class="col-8 col-lg-10">
                                    <select asp-for="Type" id="selectType" class="form-select" asp-items="ViewBag.TransType"></select>
                                </div>
                            </div>
                            <div class="form-group d-flex align-items-center mb-3 row">
                                <div class="col-4 col-lg-2 fw-bold fs-5">
                                    <label asp-for="TransQuantity" class="control-label"></label>
                                </div>
                                <div class="col-8 col-lg-10">
                                    <input asp-for="TransQuantity" id="inputQ" class="form-control" />
                                    <span asp-validation-for="TransQuantity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group d-flex align-items-center mb-3 row">
                                <div class="col-4 col-lg-2 fw-bold fs-5">
                                    <label asp-for="Note" class="control-label"></label>
                                </div>
                                <div class="col-8 col-lg-10">
                                    <input asp-for="Note" id="inputNote" class="form-control" />
                                    <span asp-validation-for="Note" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group d-flex gap-2 mt-2">
                                <button type="submit" class="btn btn-topbar flex-fill fw-bold fs-5">
                                    <i class="fa-solid fa-plus me-2"></i>新增
                                </button>
                                <a asp-action="Index" class="btn btn-outline-back flex-fill fw-bold fs-5">返回列表</a>
                            </div>
                        </form>
                </div>
            </div>
    </div>

    <div class="position-absolute top-0 end-0 m-2 me-4">
        <button type="button" id="fillTestData" class="btn btn-light fw-bold fs-6 d-flex justify-content-center align-items-center"
                style="width:40px; height:40px; border-radius:50%; border: 1px solid #D0CBCB;">
            <i class="fa-solid fa-wand-sparkles"></i>
        </button>
    </div>



</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            $("#fillTestData").on("click", function() {
                $("#inputNo").val("1100");
                // $('#selectType').val("入庫").trigger("change");
                $('#inputQ').val("10");
                $('#inputNote').val("第一次進貨");
            })</script>
    }
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {

        $('#inputNo').on('blur', function () { // 當欄位失去焦點時
            var productNo = $(this).val();
            if (!productNo) return;

            $.ajax({
                url: '@Url.Action("GetProductName", "ProductStock")', // 對應你的 Controller
                type: 'GET',
                data: { productNo: productNo },
                success: function (res) {
                    if (res.success) {
                        $('#ProductName').val(res.name);
                    } else {
                        $('#ProductName').val('');
                        alert('找不到商品名稱');
                    }
                },
                error: function () {
                    alert('發生錯誤，請稍後再試');
                }
            });
        });
    });
</script>




