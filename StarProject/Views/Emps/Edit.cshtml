@model StarProject.ViewModels.EditEmpViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>編輯員工</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <h5>表單驗證錯誤：</h5>
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>欄位</th>
                            <th>錯誤訊息</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var kvp in ViewData.ModelState)
                        {
                            var field = kvp.Key;
                            var errors = kvp.Value.Errors;
                            foreach (var error in errors)
                            {
                                <tr>
                                    <td>@field</td>
                                    <td>@error.ErrorMessage</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        }

        <form asp-action="Edit" method="post" id="editEmpForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- 隱藏欄位 -->
            <input type="hidden" asp-for="No" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- 改進的部門選單 -->
            <div class="form-group mb-3">
                <label asp-for="DeptNo" class="control-label">部門</label>
                <select asp-for="DeptNo" class="form-control" id="deptSelect">
                    @if (Model.Depts != null && Model.Depts.Any())
                    {
                        @foreach (var dept in Model.Depts)
                        {
                            <option value="@dept.Value" selected="@dept.Selected">@dept.Text</option>
                        }
                    }
                    else
                    {
                        <option value="">無可用的部門選項</option>
                    }
                </select>
                <span asp-validation-for="DeptNo" class="text-danger"></span>
                @* <small class="form-text text-muted">目前選中: <span id="deptInfo">@Model.DeptNo</span></small> *@
            </div>

            <!-- 改進的職位選單 -->
            <div class="form-group mb-3">
                <label asp-for="RoleNo" class="control-label">職位</label>
                <select asp-for="RoleNo" class="form-control" id="roleSelect">
                    @if (Model.Roles != null && Model.Roles.Any())
                    {
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role.Value" selected="@role.Selected">@role.Text</option>
                        }
                    }
                    else
                    {
                        <option value="">無可用的職位選項</option>
                    }
                </select>
                <span asp-validation-for="RoleNo" class="text-danger"></span>
                @* <small class="form-text text-muted">目前選中: <span id="roleInfo">@Model.RoleNo</span></small> *@
            </div>

            <div class="form-group mb-3">
                <label asp-for="HireDate" class="control-label"></label>
                <input asp-for="HireDate" class="form-control" type="date" />
                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdNumber" class="control-label"></label>
                <input asp-for="IdNumber" class="form-control" />
                <span asp-validation-for="IdNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" type="date" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <input class="form-check-input" asp-for="Status" type="checkbox" />
                <label class="form-check-label" asp-for="Status">
                    在職?
                </label>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="儲存" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">取消</a>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('editEmpForm');
            const deptSelect = document.getElementById('deptSelect');
            const roleSelect = document.getElementById('roleSelect');
            const debugInfo = document.getElementById('debugInfo');

            // 更新資訊顯示
            function updateInfo() {
                document.getElementById('deptInfo').textContent = deptSelect.value;
                document.getElementById('roleInfo').textContent = roleSelect.value;
            }

            // 監聽選單變化
            deptSelect.addEventListener('change', function() {
                console.log('部門選擇變更為:', this.value);
                updateInfo();
            });

            roleSelect.addEventListener('change', function() {
                console.log('職位選擇變更為:', this.value);
                updateInfo();
            });

            // 初始化資訊顯示
            updateInfo();
        });
    </script>
}