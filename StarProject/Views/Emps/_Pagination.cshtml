@{
    int total = ViewBag.Total ?? 0;
    int pageSize = ViewBag.PageSize ?? 10;
    int totalPages = ViewBag.TotalPages ?? 1;
    int page = ViewBag.Page ?? 1;
}
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.Page ? "active" : "") @(ViewBag.TotalPages == 1 ? "disabled" : "")">
                <a class="page-link" href="javascript:void(0);" onclick="refreshEmpTable(@i)" data-page="@i">@i</a>
            </li>
        }
    </ul>
</nav>
<div class="text-center mb-2">
    <span>共 @ViewBag.Total 筆資料，頁數 <span id="paginationInfo">@ViewBag.Page</span> / @ViewBag.TotalPages</span>
</div>