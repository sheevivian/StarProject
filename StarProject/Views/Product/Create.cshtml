@model StarProject.Models.Product

@{
    ViewData["Title"] = "新品上架";
}

<head>
    <style>
        *{
            padding: 0;
            margin: 0;
        }

        .btn-topbar {
            --bs-btn-bg: rgb(250, 208, 72);
            --bs-btn-border-color: rgb(250, 208, 72);
            --bs-btn-hover-bg: rgba(250, 208, 72, 0.692);
            --bs-btn-hover-border-color: rgba(250, 208, 72, 0.692);
            --bs-btn-focus-shadow-rgb: 217, 164, 6;
            --bs-btn-active-bg: #ffcd39;
            --bs-btn-active-border-color: #ffc720;
            --bs-btn-active-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
        }

        .btn-outline-back {
            --bs-btn-color: #DC3545;
            --bs-btn-border-color: #DC3545;
            --bs-btn-hover-color: #DC3545;
            --bs-btn-hover-bg: #f8e6e9;
            --bs-btn-hover-border-color: #DC3545;
            --bs-btn-focus-shadow-rgb: 255, 193, 7;
            --bs-btn-active-color: #DC3545;
            --bs-btn-active-border-color: #DC3545;
            --bs-btn-active-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
            --bs-gradient: none;
        }

        .btn-outline-excel {
            --bs-btn-color: rgb(0, 0, 0);
            --bs-btn-border-color: rgb(0, 0, 0);
            --bs-btn-hover-color: rgb(0, 0, 0);
            --bs-btn-hover-bg: rgba(250, 208, 72, 0.692);
            --bs-btn-hover-border-color: rgb(0, 0, 0);
            --bs-btn-focus-shadow-rgb: 255, 193, 7;
            --bs-btn-active-color: rgb(0, 0, 0);
            --bs-btn-active-border-color: rgb(0, 0, 0);
            --bs-btn-active-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
            --bs-gradient: none;
        }
    </style>
</head>

<div class="position-relative">
    <h1 class="fw-bold">新品上架</h1>

    <div class="p-4 mt-3 rounded-4 bg-white">
        <h3 class="fw-bold mb-3"><i class="fa-solid fa-circle-info me-2"></i>基本資料</h3>
        <ul class="nav nav-tabs border-bottom-0">
            <li class="nav-item">
                <a class="nav-link active fs-5 text-black" data-bs-toggle="tab" href="#single">單筆建檔</a>
            </li>
            <li class="nav-item">
                <a class="nav-link fs-5 text-black" data-bs-toggle="tab" href="#multiple">批次上傳</a>
            </li>
        </ul>
        <div class="tab-content border border-top rounded-end rounded-bottom">
            <div class="tab-pane fade show active" id="single">
                <div class="row">
                    <div class="col-6 m-5">
                        <form asp-action="Create">
                            <div class="form-group d-flex align-items-center mb-3 row">
                                <div class="col-4 col-lg-2 fw-bold fs-5">
                                    <label asp-for="Name" class="control-label"></label>
                                </div>
                                <div class="col-8 col-lg-10">
                                    <input asp-for="Name" id="inputName" class="form-control" placeholder="商品名稱不可超過30個字" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group d-flex align-items-center mb-3 row">
                                <div class="col-4 col-lg-2 fw-bold fs-5">
                                    <label asp-for="ProCategoryNoNavigation.Name" class="control-label"></label>
                                </div>
                                <div class="col-8 col-lg-10">
                                    <select asp-for="ProCategoryNo" id="selectCat" class="form-select" asp-items="ViewBag.ProCategoryName"></select>
                                </div>
                            </div>
                            <div class="form-group d-flex align-items-center mb-3 row">
                                <div class="col-4 col-lg-2 fw-bold fs-5">
                                    <label asp-for="Price" class="control-label"></label>
                                </div>
                                <div class="col-8 col-lg-10">
                                    <input asp-for="Price" id="inputPrice" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-groupd d-flex align-items-center mb-3 row">
                                <div class="col-4 col-lg-2 fw-bold fs-5">
                                    <label asp-for="Status" class="control-label"></label>
                                </div>
                                <div class="col-8 col-lg-10">
                                    <select asp-for="Status" id="selectStatus" class="form-select" asp-items="ViewBag.StatusList"></select>
                                </div>
                            </div>
                            <div class="form-group d-flex align-items-center mb-3 row">
                                <div class="col-4 col-lg-2 fw-bold fs-5">
                                    <label asp-for="ReleaseDate" class="control-label"></label>
                                </div>
                                <div class="col-8 col-lg-10">
                                    <input asp-for="ReleaseDate" id="inputRelease" class="form-control" />
                                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group d-flex gap-2 mt-2">
                                <button type="submit" class="btn btn-topbar flex-fill fw-bold fs-5">
                                    <i class="fa-solid fa-plus me-2"></i>新增
                                </button>
                                <a asp-action="Index" class="btn btn-outline-back flex-fill fw-bold fs-5">返回列表</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="multiple">
                <div class="row">
                    <div class="col-6 m-5">
                        <a asp-controller="Product" asp-action="DownloadTemplate" class="btn btn-outline-excel fw-bold fs-5 mb-3">
                            <i class="fa-solid fa-file-excel"></i>下載excel範本
                        </a>
                        <form asp-controller="Product" asp-action="CreateMultiple" method="post" enctype="multipart/form-data" id="excelUploadForm">
                            <input type="file" class="form-control fs-5" name="excelFile">
                            <div class="form-group d-flex gap-2 mt-3">
                                <button type="submit" class="btn btn-topbar flex-fill fw-bold fs-5" for="excelFile">上傳匯入</button>
                                <a asp-action="Index" class="btn btn-outline-back flex-fill fw-bold fs-5">返回列表</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="position-absolute top-0 end-0 m-2 me-4">
        <button type="button" id="fillTestData" class="btn btn-light fw-bold fs-6 d-flex justify-content-center align-items-center"
                style="width:40px; height:40px; border-radius:50%; border: 1px solid #D0CBCB;">
            <i class="fa-solid fa-wand-sparkles"></i>
        </button>
    </div>
</div>

<!-- 批次上傳圖片 -->
<div class="modal fade" id="importResultModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header">
                <h5 class="modal-title fw-bold">批次上傳商品圖片</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="關閉"></button>
            </div>
            <div class="modal-body fs-5">
                <div id="importResultMessage"><!-- 動態塞訊息 --></div>
                <a id="downloadLink" class="text-secondary">若未自動下載檔案請按此連結</a>
                <form asp-controller="Product" asp-action="CreateImageMultiple" method="post" enctype="multipart/form-data" id="excelImageForm" class="mt-3">
                    <input type="file" class="form-control fs-5" name="excelFile">
                    <div class="form-group d-flex gap-2 mt-3">
                        <button type="submit" class="btn btn-topbar flex-fill fw-bold fs-5" for="excelFile">上傳匯入</button>
                        <a asp-action="Index" class="btn btn-outline-back flex-fill fw-bold fs-5">返回列表</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(function () {

            $("#fillTestData").on("click", function() {
                $("#inputName").val("太空人造型LED發光鑰匙圈");
                $('#selectCat').val("PROSTA").trigger("change");
                $('#inputPrice').val("280");
                $('#selectStatus').val("上架");
                $('#inputRelease').val("2025-09-19");
            })

            $('#excelUploadForm').on('submit', function (e) {
                e.preventDefault();

                var formData = new FormData(this);

                $.ajax({
                    url: '/Product/CreateMultiple', // 後端 AJAX action
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function (res) {
                        if (res.success) {
                            // 自動下載檔案
                            window.location = res.downloadUrl;
                            // 將訊息塞到Modal
                            $('#importResultMessage').text(res.message);
                            // 設定下載連結
                            $('#downloadLink').attr('href', res.downloadUrl);
                            // 顯示Modal
                            var myModal = new bootstrap.Modal(document.getElementById('importResultModal'));
                            myModal.show();
                        } else {
                            alert('匯入失敗：' + res.message);
                        }
                    },
                    error: function () {
                        alert('發生錯誤，請稍後再試');
                    }
                });
            });
        });
    </script>
}

