@{
    int total = ViewBag.Total ?? 0;
    int pageSize = ViewBag.PageSize ?? 10;
    int totalPages = ViewBag.TotalPages ?? 1;
    int page = ViewBag.Page ?? 1;
}
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == page ? "active" : "") @(totalPages == 1 ? "disabled" : "")">
                <a class="page-link" href="javascript:void(0);" onclick="refreshEmpTable(@i)" data-page="@i">@i</a>
            </li>
        }
    </ul>
</nav>
<div class="text-center mb-2">
    <span>共 @total 筆資料，頁數 <span id="paginationInfo">@@page</span> / @totalPages</span>
</div>