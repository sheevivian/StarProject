@model StarProject.ViewModel.EventInfoVM
@{
    ViewData["Title"] = "活動編輯";
}

<style>
    /* 預覽：完整顯示、不裁切 */
    .img-box {
        max-width: 650px;
        max-height: 650px;
        display: flex;
        justify-content: center;
        align-items: center;
        border: 1px solid #ddd;
        overflow: hidden;
    }

        .img-box img {
            max-width: 100%;
            max-height: 100%;
            width: auto;
            height: auto;
            object-fit: contain;
            display: block;
        }
</style>

<h1>活動編輯</h1>
<hr />

<div class="row">
    <div class="d-flex w-100">

        <form asp-action="Edit"
              asp-controller="Events"
              asp-route-id="@Model.No"
              method="post"
              enctype="multipart/form-data"
              class="col-md-5">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="No" />

            <div class="mb-3">
                <label asp-for="No" class="form-label fw-bold">活動編號</label>
                <input asp-for="No" class="form-control" readonly />
                <span asp-validation-for="No" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold">活動名稱</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Category" class="form-label fw-bold">活動種類</label>
                <select asp-for="Category" class="form-select">
                    <option value="星學課程">星學課程</option>
                    <option value="星知講座">星知講座</option>
                    <option value="星境營隊">星境營隊</option>
                    <option value="星耀計畫">星耀計畫</option>
                    <option value="星樂工作坊">星樂工作坊</option>
                    <option value="星動旅程">星動旅程</option>
                    <option value="星趣親子時光">星趣親子時光</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Location" class="form-label fw-bold">活動地點</label>
                <select asp-for="Location" class="form-select">
                    <option value="第一演講室">第一演講室</option>
                    <option value="第二演講室">第二演講室</option>
                    <option value="屋頂天文台">屋頂天文台</option>
                    <option value="戶外廣場">戶外廣場</option>
                    <option value="多功能教室">多功能教室</option>
                    <option value="實驗教室">實驗教室</option>
                    <option value="觀測室">觀測室</option>
                    <option value="天文館">天文館</option>
                    <option value="天文館大廳報到">天文館大廳報到</option>
                </select>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MaxParticipants" class="form-label fw-bold">人數上限</label>
                <select asp-for="MaxParticipants" class="form-select">
                    <option value="30">30</option>
                    <option value="38">38</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                    <option value="200">200</option>
                </select>
                <span asp-validation-for="MaxParticipants" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label fw-bold">活動狀態</label>
                <select asp-for="Status" class="form-select" id="status">
                    <option value="已結束">已結束</option>
                    <option value="報名中">報名中</option>
                    <option value="已額滿">已額滿</option>
                    <option value="已取消">已取消</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="row g-3">
                <!-- g-3 讓時間欄位也有一致間距 -->
                <div class="col-12">
                    <label asp-for="StartDate" class="form-label fw-bold">開始時間</label>
                    <input asp-for="StartDate" type="datetime-local" class="form-control"
                           value="@(Model.StartDate.ToString("yyyy-MM-ddTHH:mm"))" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label asp-for="EndDate" class="form-label fw-bold">結束時間</label>
                    <input asp-for="EndDate" type="datetime-local" class="form-control"
                           value="@(Model.EndDate.HasValue? Model.EndDate.Value.ToString("yyyy-MM-ddTHH:mm") : "")" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="CreatedTime" class="form-label fw-bold">建立時間</label>
                <input asp-for="CreatedTime" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="UpdatedTime" class="form-label fw-bold">最後更新時間</label>
                <input asp-for="UpdatedTime" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="Fee" class="form-label fw-bold">活動費用</label>
                <input asp-for="Fee" class="form-control" />
                <span asp-validation-for="Fee" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Deposit" class="form-label fw-bold">預定訂金</label>
                <input asp-for="Deposit" class="form-control" />
                <span asp-validation-for="Deposit" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Desc" class="form-label fw-bold">活動說明</label>
                <textarea asp-for="Desc" class="form-control" rows="10" placeholder="請輸入活動說明..." style="resize:none;"></textarea>
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImageFile" class="form-label fw-bold">圖片上傳</label>
                <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" onchange="previewImage(event)" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">儲存</button>
                <a asp-action="List" class="btn btn-secondary ms-2">返回列表</a>
            </div>
        </form>

        <div class="flex-fill d-flex justify-content-center">
            <div class="img-box mb-3">
                <img id="originalImg" src="@Model.Image" alt="活動圖片" style="display:block;" />
                <img id="preview" src="#" alt="圖片預覽" style="display:none" />
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(event){
          const file = event.target.files?.[0];
          if(!file) return;
          const originalImg = document.getElementById('originalImg');
          const preview = document.getElementById('preview');
          originalImg.style.display = 'none';
          preview.src = URL.createObjectURL(file);
          preview.style.display = 'block';
        }
    </script>
}
