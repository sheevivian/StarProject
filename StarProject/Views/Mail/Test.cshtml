@model StarProject.Models.MailMessageModel

<h2>測試寄信</h2>

<form asp-action="Send" method="post">
    <label>收件人:</label>
    <input asp-for="To" />
    <br />
    <label>主題:</label>
    <input asp-for="Subject" />
    <br />
    <label>內容:</label>
    <textarea asp-for="Body"></textarea>
    <br />
    <button type="submit">送出</button>
</form>

<p>@ViewBag.Message</p>
