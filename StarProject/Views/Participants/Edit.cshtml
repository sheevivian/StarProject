@model StarProject.Models.Participant

@{
    ViewData["Title"] = "編輯報名";
}

<h1>編輯報名</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="No" />

    <div class="mb-3">
        <label>活動編號</label>
        <input class="form-control" value="@Model.EventNoNavigation?.No" readonly />
    </div>

    <div class="mb-3">
        <label>活動名稱</label>
        <input class="form-control" value="@Model.EventNoNavigation?.Title" readonly />
    </div>

    <div class="mb-3">
        <label>會員編號</label>
        <input class="form-control" value="@Model.UsersNoNavigation?.No" readonly />
    </div>

    <div class="mb-3">
        <label>會員姓名</label>
        <input class="form-control" value="@Model.UsersNoNavigation?.Name" readonly />
    </div>

    <div class="mb-3">
        <label>報名時間</label>
        <input class="form-control" value="@Model.RegisteredDate.ToString("yyyy-MM-dd HH:mm")" readonly />
    </div>

    <div class="mb-3">
        <label>最後更新時間</label>
        <input class="form-control" value="@Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm")" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Status">狀態</label>
        <input class="form-control" asp-for="Status" />
    </div>

    <div class="mb-3">
        <label>付款狀態</label>
        <input class="form-control" value="@(Model.PaymentNoNavigation != null ? Model.PaymentNoNavigation.No.ToString() : ((Model.EventNoNavigation?.Fee ?? 0) > 0 ? "未付款" : "免付款"))" readonly />
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success">儲存</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">返回列表</a>
    </div>
</form>
