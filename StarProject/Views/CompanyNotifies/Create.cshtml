@model StarProject.Models.CompanyNotify

@{
    ViewData["Title"] = "內部公告新增";
}

<head>
    <style>
        .btn-topbar {
            --bs-btn-bg: rgb(250, 208, 72);
            --bs-btn-border-color: rgb(250, 208, 72);
            --bs-btn-hover-bg: rgba(250, 208, 72, 0.692);
            --bs-btn-hover-border-color: rgba(250, 208, 72, 0.692);
            --bs-btn-focus-shadow-rgb: 217, 164, 6;
            --bs-btn-active-bg: #ffcd39;
            --bs-btn-active-border-color: #ffc720;
            --bs-btn-active-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
        }

        .btn-outline-back {
            --bs-btn-color: #DC3545;
            --bs-btn-border-color: #DC3545;
            --bs-btn-hover-color: #DC3545;
            --bs-btn-hover-bg: #f8e6e9;
            --bs-btn-hover-border-color: #DC3545;
            --bs-btn-focus-shadow-rgb: 255, 193, 7;
            --bs-btn-active-color: #DC3545;
            --bs-btn-active-border-color: #DC3545;
            --bs-btn-active-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
            --bs-gradient: none;
        }
    </style>
    <link href="~/css/textediting.css" rel="stylesheet" />
</head>

<div class="position-relative">
    <h1 class="fw-bold">內部公告新增</h1>
    <hr />
    <div class="row" style="width:100%">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <div class="d-flex">
                    <label asp-for="Title" class="control-label fw-bold fs-5"></label>
                    <span asp-validation-for="Title" class="text-danger ms-3"></span>
                    <span class="text-end text-secondary flex-grow-1 fs-5"><span id="wordCount">0</span> / 50</span>
                </div>
                <input asp-for="Title" class="form-control flex-grow-1" id="inputTitle" maxlength="50" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Category" class="control-label fw-bold fs-5"></label><span asp-validation-for="Category" class="text-danger ms-3"></span>
                <select id="categorySelect" class="form-select">
                    <option value="">請選擇</option>
                    <option value="行政公告">行政公告</option>
                    <option value="人事公告">人事公告</option>
                    <option value="活動公告">活動公告</option>
                    <option value="制度公告">制度公告</option>
                    <option value="資訊系統公告">資訊系統公告</option>
                    <option value="其他">其他</option>
                </select>

                <!-- 當選擇「其他」時顯示 -->
                <input type="text" id="otherCategoryInput" class="form-control mt-2 d-none" placeholder="請輸入自訂分類" />

                <!-- 真正要綁定到 Model.Category 的隱藏欄位 -->
                <input type="hidden" asp-for="Category" id="categoryHidden" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Content" class="control-label fw-bold fs-5"></label><span class="text-muted ms-2">(選填)</span><span asp-validation-for="Content" class="text-danger ms-3"></span>
                <textarea asp-for="Content" id="editor" class="form-control"></textarea>
            </div>

            <div class="form-group d-flex gap-2 mt-2 text-distance justify-content-center">
                <button type="submit" class="btn btn-topbar fw-bold fs-5 text-distance" style="width:303px">
                    <i class="fa-solid fa-plus"></i>新增
                </button>
                <a asp-action="Index" class="btn btn-outline-back fw-bold fs-5" style="width:303px">返回列表</a>
            </div>
        </form>
    </div>

    <div class="position-absolute top-0 end-0 m-2 me-4">
        <button type="button" id="fillTestData" class="btn btn-light fw-bold fs-6 d-flex justify-content-center align-items-center"
                style="width:40px; height:40px; border-radius:50%; border: 1px solid #D0CBCB;">
            <i class="fa-solid fa-wand-sparkles"></i>
        </button>
    </div>

</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/lib/ckeditor5-build-classic-master/build/ckeditor.js"></script>

    <script>
        let myEditor; // 全域變數

        $(document).ready(function(){

            // 初始化 CKEditor
            ClassicEditor.create(document.querySelector('#editor'), {
                language: 'zh',
                toolbar: [
                    'heading', '|',
                    'bold', 'italic', 'blockQuote', 'bulletedList', 'numberedList', '|',
                    'imageUpload', 'link', 'mediaEmbed', 'insertTable', '|',
                    'undo', 'redo'
                ],
                ckfinder: {
                    uploadUrl: '/CompanyNotifies/UploadImage'
                }
            }).then(editor => {
                myEditor = editor;
                editor.model.document.on('change:data', () => {
                    $("#editor").val(editor.getData());
                });
            }).catch(error => console.error(error));


            // 填入測試資料按鈕
            $("#fillTestData").on("click", function() {
                $("#inputTitle").val("2025 年度冬季員工旅遊活動通知：日本溫泉與滑雪之旅");
                $("#wordCount").text($("#inputTitle").val().length);
                $("#categoryHidden").val("活動公告");
                $("#categorySelect").val("活動公告").trigger("change");

                if (myEditor) {
                    // 填入 CKEditor
                    myEditor.setData(`
                        <p>親愛的同仁們：</p>
                        <p>為增進同事間的情誼並放鬆身心，本公司將於 <strong>2025 年 12 月 20 日（星期六）至 12 月 24 日（星期三）</strong> 舉辦年度冬季員工旅遊活動，前往日本體驗溫泉與滑雪，活動安排如下：</p>
                        <ul>
                            <li>第一天：抵達東京，市區觀光與團隊晚餐</li>
                            <li>第二天：前往北海道滑雪場，享受滑雪課程與自由活動</li>
                            <li>第三天：泡湯溫泉與團隊互動活動</li>
                            <li>第四天：日本文化體驗與購物行程</li>
                            <li>第五天：返回台灣</li>
                        </ul>
                        <p>交通及住宿皆由公司統一安排，住宿提供舒適雙人房。請各位同仁於 <strong>2025 年 12 月 10 日前</strong> 線上報名。</p>
                        <p>提醒同仁攜帶保暖衣物、滑雪裝備（可自備或租借）及護照，遵守導遊指示並注意安全。</p>
                        <p>人資部敬上</p>
                    `);
                } else {
                    // fallback 到 textarea
                    $("#editor").val(`
                        <p>親愛的同仁們：</p>
                        <p>為增進同事間的情誼並放鬆身心，本公司將於 <strong>2025 年 12 月 20 日（星期六）至 12 月 24 日（星期三）</strong> 舉辦年度冬季員工旅遊活動，前往日本體驗溫泉與滑雪，活動安排如下：</p>
                        <ul>
                            <li>第一天：抵達東京，市區觀光與團隊晚餐</li>
                            <li>第二天：前往北海道滑雪場，享受滑雪課程與自由活動</li>
                            <li>第三天：泡湯溫泉與團隊互動活動</li>
                            <li>第四天：日本文化體驗與購物行程</li>
                            <li>第五天：返回台灣</li>
                        </ul>
                        <p>交通及住宿皆由公司統一安排，住宿提供舒適雙人房。請各位同仁於 <strong>2025 年 12 月 10 日前</strong> 線上報名。</p>
                        <p>提醒同仁攜帶保暖衣物、滑雪裝備（可自備或租借）及護照，遵守導遊指示並注意安全。</p>
                        <p>人資部敬上</p>
                    `);
                }
            });

            // 其他表單邏輯
            const select = document.getElementById("categorySelect");
            const otherInput = document.getElementById("otherCategoryInput");
            const hiddenInput = document.getElementById("categoryHidden");

            select.addEventListener("change", function () {
                if (this.value === "其他") {
                    otherInput.classList.remove("d-none");
                    hiddenInput.value = "";
                } else {
                    otherInput.classList.add("d-none");
                    hiddenInput.value = this.value;
                }
            });

            otherInput.addEventListener("input", function () {
                hiddenInput.value = this.value;
            });

            $("#inputTitle").on("keyup", function(){
                $("#wordCount").text($(this).val().length);
            });

        });
    </script>
}
