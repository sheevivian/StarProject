@{
    int currentPage = ViewBag.Page is null ? 1 : Convert.ToInt32(ViewBag.Page);
    int totalPages = ViewBag.TotalPages is null ? 1 : Convert.ToInt32(ViewBag.TotalPages);
    int total = ViewBag.Total is null ? 0 : Convert.ToInt32(ViewBag.Total);
}

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
            <button type="button" class="page-link" data-page="@(currentPage - 1)" aria-label="Previous">«</button>
        </li>

        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "") @(totalPages == 1 ? "disabled" : "")">
                <button type="button" class="page-link" data-page="@i">@i</button>
            </li>
        }

        <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
            <button type="button" class="page-link" data-page="@(currentPage + 1)" aria-label="Next">»</button>
        </li>
    </ul>
</nav>

<div class="text-center mb-2">
    <span>共 @total 筆資料，頁數 <span id="paginationInfo">@currentPage</span> / @totalPages</span>
</div>
