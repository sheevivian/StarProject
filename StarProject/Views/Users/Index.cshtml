@section Scripts {
	<script>
		let pageNumber = parseInt($('#pageSizeSelect').val()) || 10; // é è¨­æ¯é æ•¸é‡

		$(function () {

			// checkbox å‹¾é¸
			$(document).on('click', '.checkbox', function () {
				let checked = $(this).prop('checked');

				let count = $('.checkbox:checked').length;

				if (count > 0) {
					$('#delectAll, #selectNum').show();
					$('#selectNum').text(`å·²é¸å–${count}é …`);
				} else {
					$('#delectAll, #selectNum').hide();
				}

				if (checked) {
					$(this).closest('tr').addClass('active');
				} else {
					$(this).closest('tr').removeClass('active');
				}

				$('#checkAll').prop('checked', $('.checkbox').length === $('.checkbox:checked').length);
			});

			// å…¨é¸
			$('#checkAll').click(function () {

				if ($(this).prop('checked')) {
					$('.checkbox').prop('checked', true);
					$('tbody tr').addClass('active');
					$('#delectAll, #selectNum').show();

					// è¨ˆç®—å‹¾é¸æ•¸é‡
					let count = $('.checkbox:checked').length;

					if (count > 0) {
						$('#selectNum').text(`å·²é¸å–${count}é …`);
					}
				}
				else {
					$('.checkbox').prop('checked', false);
					$('tbody tr').removeClass('active');
					$('#delectAll, #selectNum').hide();
				}
			})

			// æ‰¹æ¬¡åˆªé™¤
			$('#delectAllYes').click(function () {
				// æ”¶é›†æ‰€æœ‰å‹¾é¸çš„ checkbox çš„ value (å‡è¨­ value å­˜ id)
				let ids = $('.checkbox:checked').map(function () {
					return $(this).val();
				}).get();

				if (ids.length === 0) return; // æ²’æœ‰é¸æ“‡ä¸å‹•ä½œ

				// âœ… å–å¾— CSRF token
				var token = $('input[name="__RequestVerificationToken"]').val();

				$.ajax({
					url: '/CompanyNotifies/DeleteMultiple', // å¾Œç«¯æ‰¹æ¬¡åˆªé™¤ Action
					type: 'POST',
					data: {
						__RequestVerificationToken: token, // CSRF é©—è­‰
						ids: ids // å‚³ id é™£åˆ—
					},
					traditional: true, // é™£åˆ—å‚³é€æ ¼å¼
					success: function () {
						let page = parseInt($('#paginationInfo').text()) || 1; // å–å¾—ç›®å‰é ç¢¼
						refreshTable(page);
						$('.checkbox:checked').closest('tr').remove();
						$('#delectAll, #selectNum').hide();
						$('#checkAll').prop('checked', false);
					},
					error: function () {
						alert("åˆªé™¤å¤±æ•—ï¼");
					}
				});
			})

			// é»æœå°‹æŒ‰éˆ•
			$('#btnSearch').on("click", () => {
				refreshTable(1);
				updateSelectedFilters()
			});

			// ä¹Ÿå¯ä»¥è¼¸å…¥æ¡† keyup å³æ™‚è§¸ç™¼
			$('#searchInput').on("keyup", () => {
				refreshTable(1);
				updateSelectedFilters()
			});

			$('#filterFinsh').click(function () {
				updateFilterCount();
				updateSelectedFilters()

				refreshTable(1);

				// æ‰¾åˆ°æœ€æ¥è¿‘çš„ dropdown-toggle
				var toggleBtn = $(this).closest('.dropdown').find('.dropdown-toggle')[0];

				// å–å¾— bootstrap dropdown instance
				var dropdown = bootstrap.Dropdown.getInstance(toggleBtn);

				// æ²’æœ‰çš„è©±å°±æ–°å»º
				if (!dropdown) dropdown = new bootstrap.Dropdown(toggleBtn);

				// å‘¼å«å®˜æ–¹çš„ hide æ–¹æ³•ä¾†é—œé–‰
				dropdown.hide();
			});


			// æœå°‹æ¸…é™¤æŒ‰éˆ•
			document.querySelector(".btn-outline-search").addEventListener("click", function () {
				document.querySelectorAll("input[type=checkbox]").forEach(cb => cb.checked = false);
				document.getElementById("dateFrom").value = "";
				document.getElementById("dateTo").value = "";
				document.getElementById("searchInput").value = "";
				updateSelectedFilters();
				updateFilterCount()
				refreshTable(1);
			});

			// æ—¥æœŸå€é–“é‚è¼¯
			const dateFrom = document.getElementById("dateFrom");
			const dateTo = document.getElementById("dateTo");

			dateFrom.addEventListener("change", () => {
				if (dateFrom.value) {
					dateTo.min = dateFrom.value; // å‹•æ…‹é™åˆ¶
					if (dateTo.value && dateTo.value < dateFrom.value) {
						dateTo.value = ""; // è‡ªå‹•æ¸…ç©ºä¸åˆæ³•æ—¥æœŸ
					}
				} else {
					dateTo.min = ""; // ç§»é™¤é™åˆ¶
				}
			});


			// æ›´æ–°ç¯©é¸é¡¯ç¤ºæ–‡å­—
			function updateSelectedFilters() {
				let selected = [];

				// å…¬å‘Šé¡å‹
				let categories = $("#collapseCategory input:checked").map(function () { return $(this).next("label").text(); }).get();
				if (categories.length) selected.push("<strong>é¡å‹ï¼š</strong>" + categories.join(", "));

				// æ—¥æœŸå€é–“
				let from = $("#dateFrom").val();
				let to = $("#dateTo").val();
				if (from || to) selected.push("<strong>æ—¥æœŸï¼š</strong>" + (from ? from : "ä¸é™") + " ~ " + (to ? to : "ä¸é™"));

				// é¡¯ç¤ºæˆ–éš±è— div
				if (selected.length) {
					$("#selectedFiltersDiv").show();
					$("#selectedFiltersText").html(selected.join("&nbsp;&nbsp;&nbsp;&nbsp;"));
				} else {
					$("#selectedFiltersDiv").hide();
					$("#selectedFiltersText").html("");
				}
			}

			function updateFilterCount() {
				let count = 0;

				// å…¬å‘Šé¡å‹
				if ($("#collapseCategory input:checked").length > 0) count++;

				// ç™¼å¸ƒæ—¥æœŸ (ä»»æ„ä¸€å€‹æ—¥æœŸä¸ç©ºç®—1)
				if ($("#dateFrom").val() || $("#dateTo").val()) count++;

				// æ›´æ–°å³ä¸Šè§’ tooltip
				if (count > 0) {
					$("#filterCount").show();
					$("#filterCount").text(`${count}`);
				} else {
					$("#filterCount").hide();
				}
			}

			// åˆ†é æŒ‰éˆ•
			$(".pagination").on("click", ".pagination .page-link", function (e) {
				e.preventDefault();
				let page = $(this).data("page");
				refreshTable(page);
			});


			// è©³ç´°è³‡æ–™
			$(document).on('click', '.btn-detail', function () {
				var btn = $(this);
				// ğŸ”‘ å–å¾—é€™ç­†è³‡æ–™çš„ ID
				var id = btn.data('id');

				$('#modelTitle').text(btn.data('title'));
				$('#modelCon').html(btn.data('content'));

				// 1ï¸âƒ£ è¨­å®šã€Œç·¨è¼¯ã€æŒ‰éˆ•é€£çµ
				$('#modelEditBtn').attr("href", "/CompanyNotifies/Edit/" + id);

				// 2ï¸âƒ£ è¨­å®šã€Œåˆªé™¤ã€æŒ‰éˆ• data-id
				$('#modelDeleteBtn').attr("data-id", id);

				// 3ï¸âƒ£ åˆªé™¤ Modal é–‹å•Ÿæ™‚ï¼Œå‹•æ…‹ä¿®æ”¹è¡¨å–® action
				$('#deleteModal').on('show.bs.modal', function () {
					$('#deleteOne').attr("action", "/CompanyNotifies/Delete/" + id);
				});
			});

			//å–®ä¸€åˆªé™¤åˆ†é æ›´æ–°
			$(document).on('click', '#deleteOnebtn', async function (e) {
				e.preventDefault();

				// å¾ form çš„ action æ‹¿ id
				let form = $(this).closest('form');
				let action = form.attr('action');
				let id = action.split('/').pop();

				if (!id) return;

				let token = $('input[name="__RequestVerificationToken"]').val();
				let page = parseInt($('#paginationInfo').text()) || 1;

				try {
					await $.ajax({
						url: '/CompanyNotifies/Delete',  // æ”¹æˆ Delete
						type: 'POST',
						data: { id: id, __RequestVerificationToken: token }
					});

					// åˆªé™¤å¾Œåˆ·æ–°åˆ—è¡¨
					refreshTable(page);


					// é—œé–‰ Detail Modal
					$('#modalDetail').modal('hide');

					// é—œé–‰ Modal
					$('#deleteModal').modal('hide');

				} catch (err) {
					alert("åˆªé™¤å¤±æ•—ï¼š" + (err.responseText || err.statusText));
				}
			});

			// ç•¶ select æ”¹è®Šæ™‚
			$('#pageSizeSelect').on('change', function () {
				pageNumber = parseInt($(this).val()); // æ›´æ–° pageNumber

				refreshTable(1);
			});

		});

		// çµ±ä¸€åˆ·æ–°åˆ—è¡¨
		async function refreshTable(page = 1, filters = {}) {
			try {

				filters.Page = page;
				filters.PageSize = pageNumber;
				filters.keyword = $('#searchInput').val();
				filters.Categories = [...document.querySelectorAll("#collapseCategory input:checked")].map(cb => cb.value);
				filters.DateFrom = $("#dateFrom").val();
				filters.DateTo = $("#dateTo").val();

				// å–å¾— CSRF Token
				filters.__RequestVerificationToken = $('input[name="__RequestVerificationToken"]').val();

				let response = await $.ajax({
					url: '/CompanyNotifies/SearchSelect',
					type: 'POST',
					data: JSON.stringify(filters),
					contentType: "application/json"
				});

				// å¦‚æœæœ¬é æ²’æœ‰è³‡æ–™ä¸”é æ•¸å¤§æ–¼ 1ï¼Œè‡ªå‹•å›å‰ä¸€é 
				if (response.tableHtml.trim() === "" && page > 1) {
					return await refreshTable(page - 1, filters);
				}

				// æ›´æ–° tableBody
				$("#tableBody").html(response.tableHtml);

				// æ›´æ–° pagination
				$("#pagination").html(response.paginationHtml);

				// æ›´æ–°åˆ†é é¡¯ç¤º
				$('#paginationInfo').text(page);

				$('#delectAll, #selectNum').hide();
				$('#checkAll').prop('checked', false);

			} catch (err) {
				alert("æ›´æ–°åˆ—è¡¨å¤±æ•—ï¼š" + err.responseText || err.statusText);
			}
		}
	</script>
