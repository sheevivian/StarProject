@model StarProject.DTOs.LoginDTO

@{
	Layout = null;
}
}
@{
    ViewData["Title"] = "登入";
}

<!DOCTYPE html>
<html lang="zh-hant">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>天文館後台管理系統</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* === 基礎重置樣式 === */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* === 主體背景設定 === */
        body {
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            /* 深藍漸變背景，模擬夜空 */
            background: linear-gradient(135deg, #0c0c2e 0%, #1a1a3a 30%, #2d1b69 60%, #000 100%);
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* === 星空背景動畫 === */
        .stars {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
        }

        .star {
            position: absolute;
            width: 2px;
            height: 2px;
            background: white;
            border-radius: 50%;
            animation: twinkle 3s infinite alternate;
        }

        @@keyframes twinkle {
            0%

        {
            opacity: 0.3;
            transform: scale(0.8);
        }

        100% {
            opacity: 1;
            transform: scale(1.2);
        }

        }

        /* === 流星動畫 === */
        .meteor {
            position: absolute;
            width: 2px;
            height: 2px;
            background: linear-gradient(45deg, #fff, transparent);
            border-radius: 50%;
            animation: meteor 4s linear infinite;
        }

        @@keyframes meteor {
            0%

        {
            transform: translateX(-100px) translateY(-100px);
            opacity: 0;
        }

        10% {
            opacity: 1;
        }

        90% {
            opacity: 1;
        }

        100% {
            transform: translateX(300px) translateY(300px);
            opacity: 0;
        }

        }

        /* === 主登入表單容器 === */
        .login-container {
            width: 420px;
            padding: 50px 40px;
            /* 毛玻璃效果 */
            background: rgba(255, 255, 255, 0.08);
            backdrop-filter: blur(20px);
            /* 邊框和陰影 */
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 24px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.1);
            z-index: 10;
        }

            /* === 表單內所有元素的基礎樣式 === */
            .login-container * {
                font-family: 'Inter', sans-serif;
                color: #ffffff;
                outline: none;
                border: none;
            }

        /* === Logo區域 === */
        .logo-section {
            text-align: center;
            margin-bottom: 40px;
        }

        .logo-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 20px;
            /* 漸變背景 */
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 36px;
            color: white;
            /* 發光效果 */
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }

        /* === 標題樣式 === */
        .login-container h3 {
            font-size: 28px;
            font-weight: 700;
            text-align: center;
            margin-bottom: 8px;
        }

        .system-subtitle {
            font-size: 16px;
            color: rgba(255, 255, 255, 0.7);
            font-weight: 400;
            text-align: center;
            margin-bottom: 30px;
        }

        /* === 標籤樣式 === */
        label {
            display: block;
            margin-top: 24px;
            font-size: 14px;
            font-weight: 500;
            color: rgba(255, 255, 255, 0.9);
            margin-bottom: 8px;
        }

        /* === 輸入框容器 === */
        .input-wrapper {
            position: relative;
        }

        /* === 輸入框樣式 === */
        input {
            display: block;
            height: 54px;
            width: 100%;
            /* 半透明背景 */
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            /* 左邊留空間給圖標 */
            padding: 0 20px 0 50px;
            font-size: 16px;
            color: #ffffff;
            /* 平滑過渡效果 */
            transition: all 0.3s ease;
        }

            /* === 佔位符文字顏色 === */
            input::placeholder {
                color: rgba(255, 255, 255, 0.5);
            }

            /* === 輸入框焦點狀態 === */
            input:focus {
                border-color: #667eea;
                background: rgba(255, 255, 255, 0.08);
                /* 外發光效果 */
                box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
            }

        /* === 輸入框圖標 === */
        .input-icon {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(255, 255, 255, 0.6);
            font-size: 16px;
        }

        /* === 登入按鈕 === */
        button {
            margin-top: 32px;
            width: 100%;
            height: 54px;
            /* 漸變背景 */
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            font-size: 16px;
            font-weight: 600;
            border-radius: 12px;
            cursor: pointer;
            /* 平滑過渡 */
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            /* === 按鈕光澤效果 === */
            button::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
                transition: left 0.5s;
            }

            /* === 按鈕懸停效果 === */
            button:hover {
                transform: translateY(-2px);
                box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
            }

                button:hover::before {
                    left: 100%;
                }

            /* === 按鈕點擊效果 === */
            button:active {
                transform: translateY(0);
            }

        /* === 訊息區域 === */
        .message {
            margin-top: 20px;
            padding: 12px 16px;
            border-radius: 8px;
            text-align: center;
            font-size: 14px;
            font-weight: 500;
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.2);
            color: #fca5a5;
            display: none;
        }

        /* === 手機端響應式設計 === */
        @@media (max-width: 480px) {
            .login-container

        {
            width: 90%;
            padding: 40px 30px;
            margin: 20px;
        }

        .login-container h3 {
            font-size: 24px;
        }

        .logo-icon {
            width: 60px;
            height: 60px;
            font-size: 28px;
        }

        }

        @@media (max-height: 700px) {
            .login-container

        {
            padding: 30px 40px;
        }

        .logo-icon {
            width: 60px;
            height: 60px;
            font-size: 28px;
            margin-bottom: 15px;
        }

        .system-subtitle {
            margin-bottom: 20px;
        }

        }
    </style>
</head>
<body>
    <!-- 星空背景容器 -->
    <div class="stars" id="stars"></div>

    <!-- 登入表單 -->
    <div class="login-container">
        <!-- Logo和標題區域 -->
        <div class="logo-section">
            <div class="logo-icon">
                <i class="fas fa-satellite"></i>
            </div>
        </div>

        <h3>天文館後台系統</h3>
        <p class="system-subtitle">探索宇宙，管理星空</p>

        <form method="post">
            <!-- 帳號輸入區域 -->
            <label asp-for="Account">管理員帳號</label>
            <div class="input-wrapper">
                <input asp-for="Account" placeholder="請輸入管理員帳號" required />
                <span asp-validation-for="Account" class="text-danger"></span>
                <i class="fas fa-user input-icon"></i>
            </div>

            <!-- 密碼輸入區域 -->
            <label asp-for="Password">密碼</label>
            <div class="input-wrapper">
                <input asp-for="Password" type="password" placeholder="請輸入密碼" required />
                <span asp-validation-for="Password" class="text-danger"></span>
                <i class="fas fa-lock input-icon"></i>
            </div>

            <!-- 登入按鈕 -->
            <button type="submit">登入系統</button>

            <!-- 錯誤訊息顯示區域 -->
            @if (!string.IsNullOrEmpty(ViewBag.Message as string))
            {
                <div class="message" style="display: block;">
                    @ViewBag.Message
                </div>
            }
        </form>
    </div>

    <script>
        // === JavaScript 功能區域 ===

        // 生成星空背景函數
        function createStars() {
            const starsContainer = document.getElementById('stars');
            const numStars = 100; // 星星數量

            // 創建星星
            for (let i = 0; i < numStars; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                // 隨機位置
                star.style.left = Math.random() * 100 + '%';
                star.style.top = Math.random() * 100 + '%';
                // 隨機動畫延遲，讓星星不會同時閃爍
                star.style.animationDelay = Math.random() * 3 + 's';
                starsContainer.appendChild(star);
            }

            // 創建流星
            for (let i = 0; i < 3; i++) {
                const meteor = document.createElement('div');
                meteor.className = 'meteor';
                meteor.style.left = Math.random() * 50 + '%';
                meteor.style.top = Math.random() * 50 + '%';
                meteor.style.animationDelay = Math.random() * 4 + 's';
                starsContainer.appendChild(meteor);
            }
        }

         // 頁面載入完成後執行
        document.addEventListener('DOMContentLoaded', function() {
            // 初始化星空
            createStars();

            // 檢查是否有後端錯誤訊息需要顯示
            const messageDiv = document.getElementById('message');
            // 這裡可以通過後端 ViewBag 或其他方式傳遞錯誤訊息

            // 表單提交前的客戶端驗證
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                const account = document.getElementById('Account').value.trim();
                const password = document.getElementById('Password').value.trim();

                if (!account || !password) {
                    e.preventDefault(); // 只在驗證失敗時阻止提交
                    messageDiv.textContent = '請輸入帳號和密碼';
                    messageDiv.style.display = 'block';
                    messageDiv.style.background = 'rgba(239, 68, 68, 0.1)';
                    messageDiv.style.borderColor = 'rgba(239, 68, 68, 0.2)';
                    messageDiv.style.color = '#fca5a5';
                    return false;
                }

                // 如果驗證通過，顯示載入狀態並允許表單提交
                messageDiv.textContent = '登入中...';
                messageDiv.style.background = 'rgba(34, 197, 94, 0.1)';
                messageDiv.style.borderColor = 'rgba(34, 197, 94, 0.2)';
                messageDiv.style.color = '#86efac';
                messageDiv.style.display = 'block';

                // 讓表單正常提交到後端
                return true;
            });
        });
    </script>
</body>
</html>