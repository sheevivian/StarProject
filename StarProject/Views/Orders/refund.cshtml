<h1 class="text-center my-4">訂單管理</h1>

<!-- 查詢表單 -->
<form method="get" asp-action="Index" class="mb-3">
    <div class="form-group mb-2">
        <label class="fw-bold">訂單種類</label>
        <select name="category" class="form-control">
            <option value="">全部</option>
            <option value="商品">商品</option>
            <option value="票券">票券</option>
        </select>
    </div>

    <div class="form-group mb-2">
        <label class="fw-bold">付款狀態</label>
        <select name="paymentStatus" class="form-control">
            <option value="">全部</option>
            <option value="已付款">已付款</option>
            <option value="待確認">待確認</option>
            <option value="未付款">未付款</option>
        </select>
    </div>

    <div class="form-group mb-2">
        <label class="fw-bold">會員姓名</label>
        <input type="text" name="userName" class="form-control" placeholder="輸入姓名搜尋">
    </div>

    <button type="submit" class="btn btn-purple">
        <i class="bi bi-search"></i> 查詢
    </button>
</form>

<!-- 訂單表格 -->
<table class="table">
    <thead>
        <tr>
            <th>訂單編號</th>
            <th>會員姓名</th>
            <th>會員編號</th>
            <th>商品種類</th>
            <th>總金額</th>
            <th>日期</th>
            <th>購買明細</th>
            <th>付款狀態</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var order in Model.Items)
        {
            <tr>
                <td>@order.No</td>
                <td>@order.UserNoNavigation.Name</td>
                <td>@order.UserNo</td>
                <td>@order.Category</td>
                <td>@order.AllTotal</td>
                <td>@order.Date.ToString("yyyy-MM-dd")</td>
                <td>
                    <button type="button" class="btn btn-purple">明細</button>
                </td>
                <td class="@(order.PaymentStatus == "未付款" || order.PaymentStatus == "待確認"
                                                ? "text-danger"
                                                : "text-success")">
                @order.PaymentStatus
            </td>
        </tr>
                }
    </tbody>
</table>

<!-- 分頁 -->
<div class="d-flex justify-content-center my-3">
    @if (Model.HasPreviousPage)
    {
        <a href="?page=@(Model.PageNumber - 1)" class="btn btn-purple me-2">上一頁</a>
    }
    @if (Model.HasNextPage)
    {
        <a href="?page=@(Model.PageNumber + 1)" class="btn btn-purple">下一頁</a>
    }
</div>
