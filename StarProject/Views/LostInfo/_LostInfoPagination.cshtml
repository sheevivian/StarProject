@{
    int total = ViewBag.Total;
    int pageSize = ViewBag.PageSize;
	int totalPages = ViewBag.TotalPages;
	int page = ViewBag.Page;
}

<nav aria-label="Page navigation">
	<ul class="pagination justify-content-center">
		@for (int i = 1; i <= ViewBag.TotalPages; i++)
		{
			<li class="page-item @(i == ViewBag.Page ? "active" : "") @(ViewBag.TotalPages == 1 ? "disabled" : "")">
				<a class="page-link" href="javascript:void(0);" onclick="refreshLostInfoTable(@i)" data-page="@i">@i</a>
			</li>
		}
	</ul>
</nav>

<div class="text-center mb-2">
	<span>共 @ViewBag.Total 筆資料，頁數 <span id="paginationInfo">@ViewBag.Page</span> / @ViewBag.TotalPages</span>
</div>